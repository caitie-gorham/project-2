<main class="container">
  <!-- row 1 / heading for entire section -->
  <section class="row greenhouse">
    <h1>Your Greenhouse</h1>
    <hr>
  </section>

      <div class="row">
        {{#if plants}}
        {{#each plants as |plant|}}
        <div class="col-md-4">
            <div class="card green color">
                <img src="{{plant.url}}" class="card-img-top plants" alt="...">
                <div class="card-body">
                    <h2 class="card-title">{{plant.name}}</h2>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item color"><strong>Scientific Name:</strong> {{plant.scientific_name}}</li>
                        <li class="list-group-item color"><strong>Sunlight Care:</strong> {{plant.sunlight_care}}</li>
                        <li class="list-group-item color"><strong>Indoor:</strong> {{plant.indoor}}</li>
                        <li class="list-group-item color"><strong>Watering Routine:</strong> {{plant.watering_tips}}</li>
                    </ul>
                    <textarea class="note-textarea" placeholder="Note Text"></textarea>
                    <br>
                    <button type="button" class="btn btn-success save-plant">Save Note</button>
                </div>
            </div>
        </div>
        {{/each}}
        {{/if}}
    </div>
  
  
</main>