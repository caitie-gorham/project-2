<main class="container">
  <!-- row 1 / heading for entire section -->
  <section class="row greenhouse">
    <h1>Your Greenhouse</h1>
    <hr>
  </section>
  {{!-- row 2 --}}
  <div class="row">
    {{#if profile}}
    {{#each user as |user_id|}}
    <div class="col-md-4">
      <div class="card green color">
        <img src="{{user_id.url}}" class="card-img-top plants" alt="...">
        <div class="card-body">
          <h2 class="card-title">{{user_id.name}}</h2>
          <ul class="list-group list-group-flush">
            <li class="list-group-item color"><strong>Scientific Name:</strong> {{user_id.scientific_name}}</li>
            <li class="list-group-item color"><strong>Sunlight Care:</strong> {{user_id.sunlight_care}}</li>
            <li class="list-group-item color"><strong>Indoor:</strong> {{user_id.indoor}}</li>
            <li class="list-group-item color"><strong>Watering Routine:</strong> {{user_id.watering_tips}}</li>
          </ul>
          <textarea class="note-textarea" placeholder="Note Text"></textarea>
          <br>
          <button type="button" class="btn btn-success save-user">Save Note</button>
        </div>
      </div>
    </div>
    {{/each}}
    {{/if}}
  </div>



</main>
<script src="/js/profile.js"></script>