<main class="container">
    <!-- row 1 / heading for entire section -->
    <section class="row greenhouse">
        <h1>Common Houseplants</h1>
        <br>
        <h5>Click the cards below to add them to your greenhouse:</h5>
        <hr>
    </section>
    <!-- row 2 -->
    <section class="row">
        {{#if plants.length}}
        <section class="col-md-3 plants">
            {{#each plants as |plant|}}
            <div class="card" style="width: 18rem;">
                <img src="{{url}}"
                    class="card-img-top" alt="..." class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">{{plant.name}}</h5>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">{{plant.scientific_name}}</li>
                        <li class="list-group-item">{{plant.sunlight_care}}</li>
                        <li class="list-group-item">{{plant.indoor}}</li>
                        <li class="list-group-item">{{plant.watering_tips}}</li>
                    </ul>
                    <div class="modal" tabindex="-1">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title">Modal title</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal"
                                        aria-label="Close"></button>
                                </div>
                                <form>
                                    <div class="mb-3">
                                        <label for="message-text" class="col-form-label">Message:</label>
                                        <textarea class="form-control" id="message-text"></textarea>
                                    </div>
                                </form>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary"
                                        data-bs-dismiss="modal">Close</button>
                                    <button type="button" class="btn btn-primary">Save changes</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
            {{/if}}
        </section>

</main>