<div class="container">
    <!-- row 1 / heading for entire section -->
    <section class="row greenhouse">
        <h1>Common Houseplants</h1>
        <br>
        <h5>Click the cards below to add them to your greenhouse:</h5>
        <hr>
    </section>
    <!-- row 2 -->
    <div class="row">
        {{#if plants}}
        {{#each plants as |plant|}}
        <div class="col-md-4">
            <div class="card green">
                <img src="{{plant.url}}" class="card-img-top plants" alt="...">
                <div class="card-body">
                    <h2 class="card-title">{{plant.name}}</h2>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item"><strong>Scientific Name:</strong> {{plant.scientific_name}}</li>
                        <li class="list-group-item"><strong>Sunlight Care:</strong> {{plant.sunlight_care}}</li>
                        <li class="list-group-item"><strong>Indoor:</strong> {{plant.indoor}}</li>
                        <li class="list-group-item"><strong>Watering Routine:</strong> {{plant.watering_tips}}</li>
                    </ul>
                    <button type="button" class="btn btn-success save-plant">Add Me</button>
                </div>
            </div>
        </div>
        {{/each}}
        {{/if}}
    </div>
</div>